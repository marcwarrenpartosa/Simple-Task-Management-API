generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  
  password String
  tasks    Task[]  // relation to Task
}

model Task {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  status      String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}